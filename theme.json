    "settings": [
        {
            "label":"Background Settings",
            "name": "Background",
            "type":"items",
            "items": [
                {
                    "label": "Type",
                    "name": "image",
                    "type": "switch",
                    "textOff": "Color",
                    "textOn": "Image",
                    "defaultValue" : true
                },
                {
                    "label": "Background Color",
                    "name": "color",
                    "type": "color",
                    "defaultValue": "#ffffff",
                    "conditional":true,
                    "conditionTarget": "image",
                    "conditionValue":false
                },
                {
                    "label": "Type",
                    "name": "slideshow",
                    "type": "switch",
                    "textOff": "Image",
                    "textOn": "Slideshow",
                    "conditional":true,
                    "conditionTarget": "image",
                    "conditionValue":true,
                    "defaultValue" : false
                },
                {
                    "label": "Slide show time",
                    "name": "slideshowTime",
                    "type": "slider",
                    "defaultValue": 60,
                    "minimum": 10,
                    "maximum": 120,
                    "stepSize": 1,
                    "suffix": "secs",
                    "conditional":true,
                    "conditionTarget": "slideshow",
                    "conditionValue":true
                },
                {
                    "label": "Select folder",
                    "name": "slideshowPath",
                    "type": "file",
                    "browserType" : "folder",
                    "conditional":true,
                    "conditionTarget": "slideshow",
                    "conditionValue":true
                },
                {
                    "label": "Select image",
                    "name": "imagePath",
                    "type": "file",
                    "browserType" : "file",
                    "nameFilters" : [ "*.png", "*.jpg" ],
                    "conditional":true,
                    "conditionTarget": "slideshow",
                    "conditionValue":false,
                    "defaultValue" : "backgrounds/micah-hallahan-14075-unsplash.jpg"
                }
            ]
        },
        {
            "label":"Theme Settings",
            "name": "themeSettings",
            "type":"items",
            "items": [
                {
                    "label":"Font",
                    "name": "font",
                    "type":"textfield",
                    "textType" : "string",
                    "defaultValue" : "Raleway"
                }
            ]
        }
    ]
