import QmlProject 1.1

Project {
    mainFile: "designer/content/App.qml"

    /* Include .qml, .js, and image files from current directory and subdirectories */
    QmlFiles {
        directory: "designer/content"
    }
    QmlFiles {
        directory: "designer/backend"
    }
    QmlFiles {
        directory: "qml"
    }

    JavaScriptFiles {
        directory: "qml"
    }

    ImageFiles {
        directory: "qml"
    }

    Files {
        filter: "*.conf"
        files: ["designer/qtquickcontrols2.conf"]
    }

    Files {
        filter: "qmldir"
        directory: "designer/backend"
    }

    Files {
        filter: "qmldir"
        directory: "qml"
    }

    Files {
        filter: "*.ttf;*.otf"
        directory: "qml"
    }

    Environment {
        QT_QUICK_CONTROLS_CONF: "designer/qtquickcontrols2.conf"
        QT_AUTO_SCREEN_SCALE_FACTOR: "1"
        QMLSCENE_CORE_PROFILE: "true" // Required for macOS, but can create issues on embedded Linux
        QT_LOGGING_RULES: "qt.qml.connections=false"
        QT_ENABLE_HIGHDPI_SCALING: "1"


        /* Useful for debugging
       QSG_VISUALIZE=batches
       QSG_VISUALIZE=clip
       QSG_VISUALIZE=changes
       QSG_VISUALIZE=overdraw
       */
    }

    /* List of plugin directories passed to QML runtime */
    importPaths: ["imports", "asset_imports", "qml", "designer/backend"]

    qdsVersion: "3.0"

    multilanguageSupport: true
    supportedLanguages: ["en"]
    primaryLanguage: "en"
}
